<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/softPurple"
    android:orientation="vertical"
    tools:context="kr.co.workaddict.Introduce.IntroduceParent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.viewpager.widget.ViewPager
            android:layout_marginBottom="50dp"
            android:id="@+id/introduceIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/skipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginTop="60dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:background="@drawable/back_border_black"
            android:layout_marginLeft="20dp"
            android:text="Skip"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/appStartTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:background="@drawable/back_border_black"
            android:paddingHorizontal="70dp"
            android:paddingVertical="10dp"
            android:layout_marginVertical="40dp"
            android:layout_marginBottom="20dp"
            android:text="일중독 시작하기"
            android:textColor="@color/black" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/introduceTabLayout"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="?attr/actionBarSize"
            app:tabBackground="@drawable/tab_dot"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

    </FrameLayout>

</LinearLayout>