<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.co.workaddict.Registration">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="cursive"
                    android:gravity="center"
                    android:text="WorkAddict"
                    android:textSize="50dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_id_registration"
                    style="@style/editTextStyle"
                    android:layout_gravity="center"
                    android:hint="이메일 아이디"
                    android:inputType="textEmailAddress" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_pw_registration"
                    style="@style/editTextStyle"
                    android:layout_gravity="center"
                    android:hint="패스워드(8자리 이상)"
                    android:inputType="textPassword" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_pw_registration_confirm"
                    style="@style/editTextStyle"
                    android:layout_gravity="center"
                    android:hint="패스워드 확인"
                    android:inputType="textPassword" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_name_registration"
                    style="@style/editTextStyle"
                    android:layout_gravity="center"
                    android:hint="이름"
                    android:inputType="text" />

            </LinearLayout>


            <FrameLayout
                android:id="@+id/loginButtonWrap"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/back_purple_round_3dp">

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="@style/progressBar" />

                <Button
                    android:id="@+id/btn_registration_complete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:letterSpacing="0.1"
                    android:text="회원가입"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_title_x" />

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>