<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/followProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="10dp"
        android:src="@drawable/basic_profile_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="18dp"
        android:id="@+id/followID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="아이디"
        android:textSize="@dimen/font_default"
        app:layout_constraintBottom_toTopOf="@+id/followName"
        app:layout_constraintLeft_toRightOf="@+id/followProfile" />

    <TextView
        android:id="@+id/followName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="이름"
        android:textSize="@dimen/font_default"
        app:layout_constraintLeft_toRightOf="@+id/followProfile"
        app:layout_constraintTop_toBottomOf="@+id/followID"/>

    <Button
        android:id="@+id/followContentButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginRight="20dp"
        android:text="삭제"
        android:background="@drawable/text_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>