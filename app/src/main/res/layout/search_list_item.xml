<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recycler_divider"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/ll_search_list_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/place_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:paddingHorizontal="15dp"
                android:paddingVertical="10dp"
                android:text="placeName"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분야"
                android:textSize="13dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text="지번주소"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="연락처"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="3dp"
        android:layout_weight="25"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/addPlaceListWrap"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:background="@color/basic_background"
            android:gravity="center"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/addPlaceList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/ripple_oval"
                android:elevation="5dp"
                android:padding="8dp"
                android:src="@drawable/star_blank" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/favorite"
                android:textSize="@dimen/font_very_very_small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="50"
            android:background="@color/basic_background"
            android:gravity="center"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/clickedPlaceListTimeLine"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/ripple_oval"
                android:elevation="5dp"
                android:padding="8dp"
                android:src="@drawable/timeline_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="타임라인"
                android:textSize="@dimen/font_very_very_small" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>